<html>
  <head>
    <title>Home</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' />
  </head>
  <body>
    <div class='container pt-3 col-6'>
      <h5 class='text-center text-danger'>Home</h5>
      <h2 class='text-center pb-2'>Lista de Productos ingresados</h2>
      <table class='table table-bordered table-striped'>
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Código</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
          </tr>
        </thead>
        <tbody>
          {{#each productos}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>{{code}}</td>
              <td>{{price}}</td>
              <td>{{stock}}</td>
              <td>{{category}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class='text-center'>
        <a class='btn btn-primary' href='http://localhost:8080/realtimeproducts' role='button'>Real Time Products</a>
      </div>
    </div>
    <script src='/socket.io/socket.io.js'></script>
    <script src='/js/index.js'></script>
  </body>
</html>